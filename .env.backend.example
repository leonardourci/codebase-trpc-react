# RENAME THIS FILE TO .env.backend

NODE_ENV=development
REST_PORT=3000

# Database Configuration
# Note: When running in Docker Compose, the host is "db" (service name).
# If running backend locally (npm run dev) with dockerized DB, use "localhost".
# Default for Docker Compose:
DATABASE_CONNECTION_STRING=postgresql://app_user:app_password@localhost:5433/app_db

HASH_SALT=10
JWT_SECRET=replace-me-with-secure-secret
STRIPE_SECRET_KEY=replace-me
STRIPE_WEBHOOK_SECRET=replace-me

# CORS
# http://localhost:8080 - for Docker Compose (frontend web container)
# http://localhost:5173 - for local frontend development (npm run dev)
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5173,https://yourdomain.com

DB_USER=app_user
DB_PASSWORD=app_password
GOOGLE_CLIENT_ID=replace-me-with-google-client-id

# Resend Email Service
# Sign up at https://resend.com to get your API key
# RESEND_FROM_EMAIL must be from a verified domain in your Resend account
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@yourdomain.com
APP_URL=http://localhost:5173
